---
layout: default
---

<div
  class="text-center"
  x-data="{ tab: window.location.hash ? window.location.hash.substring(1) : 'line' }"
  id="tab_wrapper"
>
  <!-- The tabs navigation -->
  <nav class="sticky top-0 z-10 container mx-auto px-4">
    <div
      class="p-4 bg-white dark:bg-primary-800 shadow-lg -mt-8 flex items-center justify-between rounded-lg mb-4"
    >
      <span class="flex flex-1"
        ><a
          class="dark:text-primary-400 flex-1 md:flex-initial cursor-pointer transition-all inline-flex justify-center items-center py-2 px-8 md:px-16 rounded mr-4"
          :class="{ 'bg-secondary-400 dark:text-primary-900 pointer-events-none': tab === 'line' }"
          @click.prevent="tab = 'line'; window.location.hash = 'line'"
          >{{ "/icons/line/badge-check.svg" | svgContents("mr-2 w-6 h-6") | safe }}
          Line</a
        >
        <a
          class="dark:text-primary-400 flex-1 md:flex-initial cursor-pointer transition-all inline-flex justify-center items-center py-2 px-8 md:px-16 rounded"
          :class="{ 'bg-secondary-400 dark:text-primary-900 pointer-events-none': tab === 'solid' }"
          @click.prevent="tab = 'solid'; window.location.hash = 'solid'"
          >{{ "/icons/solid/badge-check.svg" | svgContents("mr-2 w-6 h-6") | safe }}
          Solid</a
        ></span
      >
      <span class="text-primary-600 dark:text-primary-300 hidden md:block"
        >Copy individual icon svg code</span
      >
    </div>
  </nav>

  <!-- The tabs content -->
  <div class="container mx-auto px-4">
    <div x-show="tab === 'line'">
      <div
        class="icon-wrapper"
        style="grid-template-columns: repeat(auto-fill, minmax(110px, 1fr))"
      >
        {% for icon in iconsLine %}
        <div class="icon-container">
          <div class="mb-4">
            {{ icon.sourceWithClass | safe }}
          </div>
          <div class="icon-code" id="{{ icon.nameWithoutExtension }}-line">
            {{ icon.source }}
          </div>
          <div class="icon-name">{{ icon.nameWithoutExtension }}</div>
          <div
            class="icon-copy-trigger group-hover:opacity-100"
            data-clipboard-target="#{{ icon.nameWithoutExtension }}-line"
          >
            Copy SVG
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    <div x-show="tab === 'solid'">
      <div
        class="icon-wrapper"
        style="grid-template-columns: repeat(auto-fill, minmax(110px, 1fr))"
      >
        {% for icon in iconsSolid %}
        <div class="icon-container">
          <div class="mb-4">
            {{ icon.sourceWithClass | safe }}
          </div>
          <div class="icon-code" id="{{ icon.nameWithoutExtension }}-solid">
            {{ icon.source }}
          </div>
          <div class="icon-name">{{ icon.nameWithoutExtension }}</div>
          <div
            class="icon-copy-trigger group-hover:opacity-100"
            data-clipboard-target="#{{ icon.nameWithoutExtension }}-solid"
          >
            Copy SVG
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
