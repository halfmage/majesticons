<div
  class="bg-gradient-to-r from-primary-200 to-primary-400 dark:from-primary-800 dark:to-primary-900 py-8 text-center md:text-left mb-4"
>
  <div class="container mx-auto px-4 md:flex justify-between">
    <div class="flex flex-col md:pr-16">
      <h1 class="text-4xl font-bold tracking-wide text-primary-900 dark:text-secondary-400">
        <a href="/">{{ meta.title }}</a>
      </h1>
      <p class="text-primary-700 dark:text-primary-400 text-lg my-4">
        {{ meta.description }}
      </p>
      <p class="text-primary-700 dark:text-primary-300">
        <a class="inline-flex items-center mr-6 hover:underline" href="https://github.com/halfmage/majesticons/blob/main/LICENSE" target="_blank">
          MIT Licensed
        </a>
        <a class="inline-flex items-center hover:underline" href="https://github.com/halfmage/majesticons#readme" target="_blank">
          Readme
        </a>
      </p>
    </div>

    <div class="md:flex text-sm items-center">
      <!-- theme switcher start -->
      <div class="inline-flex flex-1 my-2 items-center justify-center px-3 py-2 transition-colors cursor-pointer rounded bg-primary-200 text-primary-900 hover:bg-primary-100 mx-2">
        <button onclick="toggleDefaultTheme()" class="theme-sun">
          <svg width="24" height="24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 3v1m0 16v1m8-9h1M4 12H3m2-7l1 1m12 0l1-1m0 14l-1-1M6 18l-1 1m11-7a4 4 0 11-8 0 4 4 0 018 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button onclick="toggleSecondTheme()" class="theme-moon">
          <svg width="24" height="24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9.353 3C5.849 4.408 3 7.463 3 11.47A9.53 9.53 0 0012.53 21c4.007 0 7.062-2.849 8.47-6.353C8.17 17.065 8.14 8.14 9.353 3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
      <!-- theme switcher end -->

      <!-- figma button start -->
      <a href="https://www.figma.com/community/file/937658831428627854/Majesticons" target="_blank" class="inline-flex flex-1 my-2 items-center justify-center px-3 py-2 transition-colors cursor-pointer rounded bg-primary-200 text-primary-900 hover:bg-primary-100 mx-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-6 h-6">
          <path fill="currentColor" fill-rule="evenodd" d="M5 6a4 4 0 014-4h6a4 4 0 012.6 7 4 4 0 01-4.6 6.5V18a4 4 0 11-6.6-3 4 4 0 010-6A4 4 0 015 6zm4 8h2v-4H9a2 2 0 100 4zm2 2H9a2 2 0 102 2v-2zm6-10a2 2 0 01-2 2h-2V4h2a2 2 0 012 2zm-2 4a2 2 0 100 4 2 2 0 000-4zm-4-6H9a2 2 0 100 4h2V4z" clip-rule="evenodd"/>
        </svg>
